<div class="todos-container">
  <div class="todos-header">
    <h1>My Todo List</h1>
    <%= link_to "Logout", logout_path, class: "btn btn-secondary" %>
  </div>
  
  <% if notice %>
    <div class="alert alert-success"><%= notice %></div>
  <% end %>
  
  <% if alert %>
    <div class="alert alert-error"><%= alert %></div>
  <% end %>

  <!-- Filter section -->
  <div class="filter-section">
    <h3>Filter by Status:</h3>
    <div class="filter-buttons">
      <%= link_to "All", todos_path, class: "filter-btn #{'active' if params[:status].blank?}" %>
      <%= link_to "Open", todos_path(status: 'open'), class: "filter-btn #{'active' if params[:status] == 'open'}" %>
      <%= link_to "Doing", todos_path(status: 'doing'), class: "filter-btn #{'active' if params[:status] == 'doing'}" %>
      <%= link_to "Done", todos_path(status: 'done'), class: "filter-btn #{'active' if params[:status] == 'done'}" %>
    </div>
  </div>

  <!-- Search section -->
  <div class="search-section">
    <h3>Filter by title or description:</h3>
    <div class="search-input-container">
      <input type="text" 
             id="search-input" 
             class="search-input" 
             placeholder="Type to search todos..."
             value="<%= params[:search] %>">
      <div class="search-icon">üîç</div>
    </div>
    <div id="search-results-info" class="search-results-info"></div>
  </div>
  
  <!-- Add/Edit todo form -->
  <div class="add-todo-section">
    <% if @editing_todo %>
      <div class="editing-notice">
        <h3>Edit Todo</h3>
        <p>You are currently editing: <strong><%= @editing_todo.title %></strong></p>
        <%= link_to "Cancel Edit", todos_path, class: "btn btn-secondary btn-sm" %>
      </div>
    <% else %>
      <h3>Add New Todo</h3>
    <% end %>
    
    <% form_todo = @editing_todo || @todo %>
    <% form_url = @editing_todo ? update_todo_path(@editing_todo) : todos_path %>
    <% form_method = @editing_todo ? :patch : :post %>
    
    <%= form_with model: form_todo, url: form_url, method: form_method, local: true, class: "add-todo-form" do |form| %>
      <div class="form-row">
        <div class="form-group">
          <%= form.label :title, "Title*", class: "form-label" %>
          <%= form.text_field :title, class: "form-input", placeholder: "What needs to be done?", required: true %>
        </div>
        
        <div class="form-group">
          <%= form.label :assignee, "Assignee*", class: "form-label" %>
          <%= form.text_field :assignee, class: "form-input", placeholder: "Who is responsible?", required: true %>
        </div>
      </div>
      
      <div class="form-row">
        <div class="form-group">
          <%= form.label :due_date, "Due Date*", class: "form-label" %>
          <%= form.date_field :due_date, class: "form-input", required: true %>
        </div>
        
        <div class="form-group">
          <%= form.label :priority, "Priority*", class: "form-label" %>
          <%= form.select :priority, options_for_select([
            ['Low', 'low'],
            ['Medium', 'medium'],
            ['High', 'high']
          ], form_todo.priority), {}, { class: "form-select", required: true } %>
        </div>
        
        <div class="form-group">
          <%= form.label :status, "Status*", class: "form-label" %>
          <%= form.select :status, options_for_select([
            ['Open', 'open'],
            ['Doing', 'doing'],
            ['Done', 'done']
          ], form_todo.status), {}, { class: "form-select", required: true } %>
        </div>
      </div>
      
      <div class="form-group">
        <%= form.label :description, "Description", class: "form-label" %>
        <%= form.text_area :description, class: "form-textarea", placeholder: "Additional details (optional)", rows: 3 %>
      </div>
      
      <div class="form-group">
        <%= form.submit(@editing_todo ? "Update Todo" : "Add Todo", class: "btn btn-primary") %>
      </div>
    <% end %>
  </div>
  
  <!-- Todo list -->
  <div class="todos-list">
    <% if @todos.any? %>
      <% @todos.each do |todo| %>
        <div class="todo-item <%= 'editing' if @editing_todo == todo %>" 
             data-title="<%= html_escape(todo.title.downcase) %>"
             data-description="<%= html_escape(todo.description&.downcase || '') %>">
          <div class="todo-content">
            <div class="todo-header">
              <h4 class="todo-title"><%= html_escape(todo.title) %></h4>
              <div class="todo-meta">
                <span class="todo-priority priority-<%= todo.priority %>">
                  <%= todo.priority.capitalize %>
                </span>
                <span class="todo-status status-<%= todo.status %>">
                  <%= todo.status.capitalize %>
                </span>
              </div>
            </div>
            
            <% if todo.description.present? %>
              <p class="todo-description"><%= html_escape(todo.description) %></p>
            <% end %>
            
            <div class="todo-details">
              <div class="todo-detail">
                <strong>Assignee:</strong> <%= html_escape(todo.assignee) %>
              </div>
              <div class="todo-detail">
                <strong>Due Date:</strong> <%= todo.due_date.strftime("%B %d, %Y") %>
              </div>
              <div class="todo-detail">
                <strong>Created:</strong> <%= todo.created_at.strftime("%B %d, %Y at %I:%M %p") %>
              </div>
            </div>
          </div>
          <div class="todo-actions">
            <%= link_to "Edit", edit_todo_path(todo), class: "btn btn-primary btn-sm" %>
            <%= form_with url: destroy_todo_path(todo.id), method: :delete, local: true, style: "display: inline;" do |form| %>
                <%= form.submit "Delete", 
                    class: "btn btn-danger btn-sm",
                    onclick: "return confirm('Are you sure you want to delete this todo?')" %>
              <% end %>
          </div>
        </div>
      <% end %>
    <% else %>
      <div class="empty-state" id="empty-state">
        <h3>No todos yet!</h3>
        <p>Add your first todo item above to get started.</p>
      </div>
      <div class="no-results-state" id="no-results-state" style="display: none;">
        <h3>No todos found</h3>
        <p>Try adjusting your search or filters.</p>
      </div>
    <% end %>
  </div>
  
  <div class="footer">
    <p>Total todos: <span id="total-count"><%= @todos.length %></span></p>
  </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
  const searchInput = document.getElementById('search-input');
  const todoItems = document.querySelectorAll('.todo-item');
  const emptyState = document.getElementById('empty-state');
  const noResultsState = document.getElementById('no-results-state');
  const totalCount = document.getElementById('total-count');
  const searchResultsInfo = document.getElementById('search-results-info');
  
  function performSearch() {
    const searchTerm = searchInput.value.toLowerCase().trim();
    let visibleCount = 0;
    
    todoItems.forEach(function(item) {
      const title = item.getAttribute('data-title') || '';
      const description = item.getAttribute('data-description') || '';
      
      const matches = title.includes(searchTerm) || description.includes(searchTerm);
      
      if (matches) {
        item.style.display = 'flex';
        visibleCount++;
      } else {
        item.style.display = 'none';
      }
    });
    
    // Update counts and states
    totalCount.textContent = visibleCount;
    
    if (todoItems.length === 0) {
      // No todos at all
      if (emptyState) emptyState.style.display = 'block';
      if (noResultsState) noResultsState.style.display = 'none';
    } else if (visibleCount === 0 && searchTerm !== '') {
      // Has todos but none match search
      if (emptyState) emptyState.style.display = 'none';
      if (noResultsState) noResultsState.style.display = 'block';
    } else {
      // Has visible todos
      if (emptyState) emptyState.style.display = 'none';
      if (noResultsState) noResultsState.style.display = 'none';
    }
    
    // Update search results info
    if (searchTerm !== '' && todoItems.length > 0) {
      searchResultsInfo.textContent = `Showing ${visibleCount} of ${todoItems.length} todos`;
      searchResultsInfo.style.display = 'block';
    } else {
      searchResultsInfo.style.display = 'none';
    }
  }
  
  // Add event listener for real-time search
  searchInput.addEventListener('input', performSearch);
  
  // Perform initial search if there's a value (e.g., from URL parameter)
  if (searchInput.value.trim() !== '') {
    performSearch();
  }
});
</script>

