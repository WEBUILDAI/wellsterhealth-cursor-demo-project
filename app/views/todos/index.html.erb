<div class="todos-container">
  <div class="todos-header">
    <h1>My Todo List</h1>
    <%= link_to "Logout", logout_path, class: "btn btn-secondary" %>
  </div>
  
  <% if notice %>
    <div class="alert alert-success"><%= notice %></div>
  <% end %>
  
  <% if alert %>
    <div class="alert alert-error"><%= alert %></div>
  <% end %>

  <!-- Filter section -->
  <div class="filter-section">
    <h3>Filter by Status:</h3>
    <div class="filter-buttons">
      <%= link_to "All", todos_path, class: "filter-btn #{'active' if params[:status].blank?}" %>
      <%= link_to "Open", todos_path(status: 'open'), class: "filter-btn #{'active' if params[:status] == 'open'}" %>
      <%= link_to "Doing", todos_path(status: 'doing'), class: "filter-btn #{'active' if params[:status] == 'doing'}" %>
      <%= link_to "Done", todos_path(status: 'done'), class: "filter-btn #{'active' if params[:status] == 'done'}" %>
    </div>
  </div>
  
  <!-- Add new todo form -->
  <div class="add-todo-section">
    <h3>Add New Todo</h3>
    <%= form_with model: Todo.new, url: todos_path, method: :post, local: true, class: "add-todo-form" do |form| %>
      <div class="form-row">
        <div class="form-group">
          <%= form.label :title, "Title*", class: "form-label" %>
          <%= form.text_field :title, class: "form-input", placeholder: "What needs to be done?", required: true %>
        </div>
        
        <div class="form-group">
          <%= form.label :assignee, "Assignee*", class: "form-label" %>
          <%= form.text_field :assignee, class: "form-input", placeholder: "Who is responsible?", required: true %>
        </div>
      </div>
      
      <div class="form-row">
        <div class="form-group">
          <%= form.label :due_date, "Due Date*", class: "form-label" %>
          <%= form.date_field :due_date, class: "form-input", required: true %>
        </div>
        
        <div class="form-group">
          <%= form.label :priority, "Priority*", class: "form-label" %>
          <%= form.select :priority, options_for_select([
            ['Low', 'low'],
            ['Medium', 'medium'],
            ['High', 'high']
          ], 'medium'), {}, { class: "form-select", required: true } %>
        </div>
        
        <div class="form-group">
          <%= form.label :status, "Status*", class: "form-label" %>
          <%= form.select :status, options_for_select([
            ['Open', 'open'],
            ['Doing', 'doing'],
            ['Done', 'done']
          ], 'open'), {}, { class: "form-select", required: true } %>
        </div>
      </div>
      
      <div class="form-group">
        <%= form.label :description, "Description", class: "form-label" %>
        <%= form.text_area :description, class: "form-textarea", placeholder: "Additional details (optional)", rows: 3 %>
      </div>
      
      <div class="form-group">
        <%= form.submit "Add Todo", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
  
  <!-- Todo list -->
  <div class="todos-list">
    <% if @todos.any? %>
      <% @todos.each do |todo| %>
        <div class="todo-item">
          <div class="todo-content">
            <div class="todo-header">
              <h4 class="todo-title"><%= html_escape(todo.title) %></h4>
              <div class="todo-meta">
                <span class="todo-priority priority-<%= todo.priority %>">
                  <%= todo.priority.capitalize %>
                </span>
                <span class="todo-status status-<%= todo.status %>">
                  <%= todo.status.capitalize %>
                </span>
              </div>
            </div>
            
            <% if todo.description.present? %>
              <p class="todo-description"><%= html_escape(todo.description) %></p>
            <% end %>
            
                         <div class="todo-details">
               <div class="todo-detail">
                 <strong>Assignee:</strong> <%= html_escape(todo.assignee) %>
               </div>
               <div class="todo-detail">
                 <strong>Due Date:</strong> <%= todo.due_date.strftime("%B %d, %Y") %>
               </div>
               <div class="todo-detail">
                 <strong>Created:</strong> <%= todo.created_at.strftime("%B %d, %Y at %I:%M %p") %>
               </div>
             </div>
          </div>
          <div class="todo-actions">
            <%= form_with url: destroy_todo_path(todo.id), method: :delete, local: true, style: "display: inline;" do |form| %>
                <%= form.submit "Delete", 
                    class: "btn btn-danger btn-sm",
                    onclick: "return confirm('Are you sure you want to delete this todo?')" %>
              <% end %>
          </div>
        </div>
      <% end %>
    <% else %>
      <div class="empty-state">
        <h3>No todos yet!</h3>
        <p>Add your first todo item above to get started.</p>
      </div>
    <% end %>
  </div>
  
  <div class="footer">
    <p>Total todos: <%= @todos.length %></p>
  </div>
</div>

<style>
